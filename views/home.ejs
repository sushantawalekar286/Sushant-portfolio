<section id="awards" class="awards-section">
  <div class="container">
    <div class="section-header">
      <div class="header-content">
        <i class="fas fa-trophy trophy-icon"></i>
        <h2>Awards & Certifications</h2>
      </div>
      <div class="header-underline"></div>
    </div>

    <div class="awards-grid">
      <% awards.forEach(award => { %>
        <div class="award-card">
          <div class="award-image">
            <% if (award.image && award.image !== '/images/default-award.jpg') { %>
              <img src="<%= award.image %>" alt="<%= award.title %>" onerror="this.parentElement.innerHTML='<div class=\'placeholder-image\'><i class=\'fas fa-trophy\'></i><p>Award Image</p></div>'">
            <% } else { %>
              <div class="placeholder-image">
                <i class="fas fa-trophy"></i>
                <p>Award Image</p>
              </div>
            <% } %>
          </div>
          <div class="award-content">
            <h3 class="award-title"><%= award.title %></h3>
            <p class="award-event"><%= award.event %></p>
            <p class="award-description"><%= award.description %></p>
            <div class="award-details">
              <span class="award-category"><%= award.category %></span>
              <span class="award-date"><%= award.date %></span>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
    
    <div class="awards-btn-row">
      <a href="/full-achievement" class="awards-view-btn">
        <i class="fas fa-search"></i>
        View Full Achievements
      </a>
    </div>
  </div>
</section>

