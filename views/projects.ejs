<%- include('partials/header') %>

<section id="projects" class="projects-section">
  <div class="container">
    <div class="section-header">
      <div class="header-content">
        <i class="fas fa-rocket rocket-icon"></i>
        <h2>Featured Projects</h2>
      </div>
      <div class="header-underline"></div>
    </div>

    <div class="projects-grid">
      <% projects.forEach(project => { %>
        <div class="project-card">
          <div class="project-image">
            <% if (project.image && project.image !== '/images/default-project.jpg') { %>
              <img src="<%= project.image %>" alt="<%= project.title %>" onerror="this.parentElement.innerHTML='<div class=\'placeholder-image\'><i class=\'fas fa-image\'></i><p>Project Image</p></div>'">
            <% } else { %>
              <div class="placeholder-image">
                <i class="fas fa-image"></i>
                <p>Project Image</p>
              </div>
            <% } %>
          </div>
          <div class="project-content">
            <h3 class="project-title"><%= project.title %></h3>
            <p class="project-description"><%= project.description %></p>
            <div class="project-skills">
              <span class="skills-label">Skills:</span>
              <span class="skills-text"><%= project.skills %></span>
            </div>
            <a href="<%= project.link %>" class="project-link" target="_blank">
              <i class="fab fa-github"></i>
              GitHub Repo
            </a>
          </div>
        </div>
      <% }); %>
    </div>
    <div class="back-to-home">
      <a href="/" class="back-btn">
        <i class="fas fa-arrow-left"></i>
        Back to Home
      </a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
